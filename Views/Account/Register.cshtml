@model HealthFitness.Controllers.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<br><br>
<div class="row justify-content-center align-items-center min-vh-50">
    <div class="col-11 col-sm-9 col-md-7 col-lg-5 col-xl-4">
        <div class="card shadow-lg border-0 register-card">
            <div class="card-body p-3">
                <div class="text-center mb-3">
                    <div class="register-icon-wrapper mb-2">
                        <svg width="50" height="50" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <circle cx="16" cy="16" r="14" fill="#28a745" opacity="0.15"/>
                            <path d="M16 8L18 14L24 16L18 18L16 24L14 18L8 16L14 14L16 8Z" fill="#28a745"/>
                            <circle cx="16" cy="16" r="3" fill="#fff"/>
                        </svg>
                    </div>
                    <h4 class="fw-bold mb-1">Create Account</h4>
                    <p class="text-muted small mb-0">Join us to start your fitness journey</p>
                </div>
                
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="mb-2">
                        <label asp-for="Name" class="form-label fw-semibold small">Full Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter your full name" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-2">
                        <label asp-for="Email" class="form-label fw-semibold small">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email address" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-2">
                        <label asp-for="Password" class="form-label fw-semibold small">Password</label>
                        <div class="position-relative">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" id="passwordInput" />
                            <button type="button" class="btn btn-link position-absolute end-0 top-50 translate-middle-y pe-2" id="togglePassword" style="border: none; background: none; z-index: 10; padding: 0; color: #6c757d;">
                                <i class="bi bi-eye small" id="passwordIcon"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-2">
                        <label asp-for="ConfirmPassword" class="form-label fw-semibold small">Confirm Password</label>
                        <div class="position-relative">
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" id="confirmPasswordInput" />
                            <button type="button" class="btn btn-link position-absolute end-0 top-50 translate-middle-y pe-2" id="toggleConfirmPassword" style="border: none; background: none; z-index: 10; padding: 0; color: #6c757d;">
                                <i class="bi bi-eye small" id="confirmPasswordIcon"></i>
                            </button>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>
                    
                    <div class="row g-2 mb-2">
                        <div class="col-md-6">
                            <label asp-for="Age" class="form-label fw-semibold small">Age</label>
                            <input asp-for="Age" class="form-control" type="number" placeholder="Age" />
                            <span asp-validation-for="Age" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="Gender" class="form-label fw-semibold small">Gender</label>
                            <select asp-for="Gender" class="form-select">
                                <option value="">Select</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="d-grid mb-2">
                        <button type="submit" class="btn btn-success fw-semibold">
                            <i class="bi bi-person-plus me-2"></i>Create Account
                        </button>
                    </div>
                    
                    <div class="text-center">
                        <p class="text-muted mb-0">
                            Already have an account? 
                            <a asp-action="Login" class="text-decoration-none fw-semibold text-success">Sign in here</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .register-card {
        border-radius: 1rem;
        max-width: 450px;
        margin: 0 auto;
    }

    .register-icon-wrapper {
        display: inline-block;
        padding: 0.75rem;
        background: linear-gradient(135deg, rgba(40, 167, 69, 0.1) 0%, rgba(40, 167, 69, 0.15) 100%);
        border-radius: 50%;
        transition: transform 0.3s ease;
    }

    .register-icon-wrapper:hover {
        transform: scale(1.05);
    }

    .register-card .form-control-lg,
    .register-card .form-select-lg {
        padding: 0.75rem 1rem;
        font-size: 1rem;
        border-radius: 0.5rem;
        border: 1px solid #dee2e6;
        transition: all 0.3s ease;
    }

    .register-card .form-control-lg:focus,
    .register-card .form-select-lg:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
    }

    .register-card .form-label {
        color: #495057;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
    }

    .register-card .btn-success {
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        transition: all 0.3s ease;
    }

    .register-card .btn-success:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(40, 167, 69, 0.4);
    }

    .register-card .alert {
        border-radius: 0.5rem;
        border: none;
    }

    [data-bs-theme="dark"] .register-card {
        background-color: #212529;
    }

    [data-bs-theme="dark"] .register-card .form-control-lg,
    [data-bs-theme="dark"] .register-card .form-select-lg {
        background-color: #343a40;
        border-color: #495057;
        color: #f8f9fa;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const togglePassword = document.getElementById('togglePassword');
            const passwordInput = document.getElementById('passwordInput');
            const passwordIcon = document.getElementById('passwordIcon');
            
            if (togglePassword && passwordInput && passwordIcon) {
                togglePassword.addEventListener('click', function() {
                    const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                    passwordInput.setAttribute('type', type);
                    passwordIcon.classList.toggle('bi-eye');
                    passwordIcon.classList.toggle('bi-eye-slash');
                });
            }
            
            const toggleConfirmPassword = document.getElementById('toggleConfirmPassword');
            const confirmPasswordInput = document.getElementById('confirmPasswordInput');
            const confirmPasswordIcon = document.getElementById('confirmPasswordIcon');
            
            if (toggleConfirmPassword && confirmPasswordInput && confirmPasswordIcon) {
                toggleConfirmPassword.addEventListener('click', function() {
                    const type = confirmPasswordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                    confirmPasswordInput.setAttribute('type', type);
                    confirmPasswordIcon.classList.toggle('bi-eye');
                    confirmPasswordIcon.classList.toggle('bi-eye-slash');
                });
            }
        });
    </script>
}

