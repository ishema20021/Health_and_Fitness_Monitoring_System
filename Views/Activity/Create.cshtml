@model HealthFitness.DTOs.ActivityDto
@{
    ViewData["Title"] = "Log Activity";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="fw-bold mb-0">Log New Activity</h4>
</div>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-3">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
                    
                    <div class="mb-2">
                        <label asp-for="ActivityType" class="form-label small fw-semibold"></label>
                        <input asp-for="ActivityType" class="form-control form-control-sm" placeholder="e.g., Running, Cycling, Swimming" />
                        <span asp-validation-for="ActivityType" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-2">
                        <label asp-for="Duration" class="form-label small fw-semibold"></label>
                        <input asp-for="Duration" class="form-control form-control-sm" type="number" min="1" max="1440" />
                        <span asp-validation-for="Duration" class="text-danger small"></span>
                        <small class="form-text text-muted" style="font-size: 0.75rem;">Duration in minutes (1-1440)</small>
                    </div>
                    
                    <div class="mb-2">
                        <label asp-for="Date" class="form-label small fw-semibold">
                            <i class="bi bi-calendar-event me-1 text-success"></i>Date
                        </label>
                        <div class="date-input-wrapper">
                            <input asp-for="Date" class="form-control form-control-sm" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                        </div>
                        <span asp-validation-for="Date" class="text-danger small"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4 mb-2">
                            <label asp-for="Distance" class="form-label small fw-semibold"></label>
                            <input asp-for="Distance" class="form-control form-control-sm" type="number" step="0.01" min="0" placeholder="Distance (km)" />
                            <span asp-validation-for="Distance" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4 mb-2">
                            <label asp-for="HeartRate" class="form-label small fw-semibold"></label>
                            <input asp-for="HeartRate" class="form-control form-control-sm" type="number" min="40" max="220" placeholder="Heart Rate (bpm)" />
                            <span asp-validation-for="HeartRate" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4 mb-2">
                            <label asp-for="Notes" class="form-label small fw-semibold"></label>
                            <input asp-for="Notes" class="form-control form-control-sm" placeholder="Notes (optional)" maxlength="500" />
                            <span asp-validation-for="Notes" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="d-flex gap-2 mt-3">
                        <button type="submit" class="btn btn-primary btn-sm">Log Activity</button>
                        <a asp-action="Index" class="btn btn-secondary btn-sm">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

