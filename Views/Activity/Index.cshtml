@model List<HealthFitness.DTOs.ActivityDto>
@{
    ViewData["Title"] = "Activities";
    var groupedActivities = Model.OrderByDescending(a => a.Date).GroupBy(a => a.Date.Date);
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1">Activity Log</h2>
        <p class="text-muted mb-0">Track your workouts and physical activities</p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Log New Activity
    </a>
</div>

@if (Model.Any())
{
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <div class="p-2">
                                <h6 class="text-muted small mb-1">Total Activities</h6>
                                <h4 class="fw-bold mb-0 text-primary">@Model.Count</h4>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-2">
                                <h6 class="text-muted small mb-1">Total Duration</h6>
                                <h4 class="fw-bold mb-0 text-info">@Model.Sum(a => a.Duration) min</h4>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-2">
                                <h6 class="text-muted small mb-1">Total Calories</h6>
                                <h4 class="fw-bold mb-0 text-success">@Model.Sum(a => a.CaloriesBurned).ToString("F0")</h4>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-2">
                                <h6 class="text-muted small mb-1">Avg per Activity</h6>
                                <h4 class="fw-bold mb-0 text-warning">@(Model.Count > 0 ? (Model.Sum(a => a.CaloriesBurned) / Model.Count).ToString("F0") : "0")</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="timeline">
        @foreach (var group in groupedActivities)
        {
            <div class="mb-4">
                <div class="d-flex align-items-center mb-3">
                    <div class="flex-grow-1">
                        <h5 class="fw-bold mb-0">
                            <i class="bi bi-calendar-event me-2 text-primary"></i>
                            @group.Key.ToString("MMMM dd, yyyy")
                        </h5>
                        <small class="text-muted">
                            @group.Count() @(group.Count() == 1 ? "activity" : "activities") â€¢ 
                            @group.Sum(a => a.CaloriesBurned).ToString("F0") calories burned
                        </small>
                    </div>
                </div>
                
                <div class="row g-3">
                    @foreach (var activity in group.OrderByDescending(a => a.Date))
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <h6 class="fw-bold mb-1">
                                                <i class="bi bi-activity me-2 text-primary"></i>@activity.ActivityType
                                            </h6>
                                            <div class="d-flex align-items-center gap-2">
                                                <small class="text-muted">
                                                    <i class="bi bi-calendar-event me-1"></i>@activity.Date.ToString("MMM dd, yyyy")
                                                </small>
                                                <span class="badge bg-info text-white">
                                                    <i class="bi bi-clock me-1"></i>@activity.Date.ToString("h:mm tt")
                                                </span>
                                            </div>
                                        </div>
                                        <span class="badge bg-primary">@activity.CaloriesBurned.ToString("F0") cal</span>
                                    </div>
                                    
                                    <div class="row g-2 mt-2 small">
                                        <div class="col-6">
                                            <div class="text-muted">Duration</div>
                                            <div class="fw-semibold">@activity.Duration min</div>
                                        </div>
                                        <div class="col-6">
                                            <div class="text-muted">Calories/min</div>
                                            <div class="fw-semibold">@((activity.Duration > 0 ? activity.CaloriesBurned / activity.Duration : 0).ToString("F1"))</div>
                                        </div>
                                        @if (activity.Distance.HasValue)
                                        {
                                            <div class="col-6">
                                                <div class="text-muted">Distance</div>
                                                <div class="fw-semibold">@activity.Distance.Value.ToString("F2") km</div>
                                            </div>
                                        }
                                        @if (activity.HeartRate.HasValue)
                                        {
                                            <div class="col-6">
                                                <div class="text-muted">Heart Rate</div>
                                                <div class="fw-semibold">@activity.HeartRate.Value bpm</div>
                                            </div>
                                        }
                                        <div class="col-6">
                                            <div class="text-muted">Time</div>
                                            <div class="fw-semibold">
                                                <i class="bi bi-clock me-1 text-info"></i>@activity.Date.ToString("h:mm tt")
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="text-muted">Intensity</div>
                                            <div class="fw-semibold">
                                                @{
                                                    var intensity = activity.Duration > 0 ? (activity.CaloriesBurned / activity.Duration) : 0;
                                                    var intensityLevel = intensity < 5 ? "Low" : intensity < 10 ? "Medium" : "High";
                                                }
                                                <span class="badge bg-@(intensityLevel == "High" ? "danger" : intensityLevel == "Medium" ? "warning" : "info")">@intensityLevel</span>
                                            </div>
                                        </div>
                                        @if (!string.IsNullOrEmpty(activity.Notes))
                                        {
                                            <div class="col-12">
                                                <div class="text-muted">Notes</div>
                                                <div class="fw-semibold">@activity.Notes</div>
                                            </div>
                                        }
                                    </div>
                                    
                                    <div class="mt-3 pt-2 border-top">
                                        <div class="btn-group w-100" role="group">
                                            <a asp-action="Edit" asp-route-id="@activity.Id" class="btn btn-sm btn-outline-warning">
                                                <i class="bi bi-pencil me-1"></i>Edit
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@activity.Id" method="post" class="d-inline flex-grow-1">
                                                <button type="submit" class="btn btn-sm btn-outline-danger w-100" onclick="return confirm('Are you sure you want to delete this activity?')">
                                                    <i class="bi bi-trash me-1"></i>Delete
                                                </button>
                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card border-0 shadow-sm">
        <div class="card-body text-center py-5">
            <i class="bi bi-activity text-muted" style="font-size: 4rem;"></i>
            <h5 class="mt-3 mb-2">No Activities Yet</h5>
            <p class="text-muted mb-4">Start tracking your fitness journey by logging your first activity.</p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Log Your First Activity
            </a>
        </div>
    </div>
}

