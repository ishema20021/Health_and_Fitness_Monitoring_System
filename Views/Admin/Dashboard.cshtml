@model HealthFitness.Controllers.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1">Admin Dashboard</h2>
        <p class="text-muted mb-0">Overview of all users and system statistics</p>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-6 col-lg-3">
        <div class="card border-0 shadow-sm h-100 bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <h6 class="card-subtitle mb-2 text-white-50 fw-semibold">Total Users</h6>
                        <h2 class="fw-bold mb-0">@Model.TotalUsers</h2>
                    </div>
                    <i class="bi bi-people fs-3 opacity-75"></i>
                </div>
                <small class="text-white-50">@Model.ActiveUsers active users</small>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card border-0 shadow-sm h-100 bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <h6 class="card-subtitle mb-2 text-white-50 fw-semibold">Total Activities</h6>
                        <h2 class="fw-bold mb-0">@Model.TotalActivities</h2>
                    </div>
                    <i class="bi bi-activity fs-3 opacity-75"></i>
                </div>
                <small class="text-white-50">@Model.TotalCaloriesBurned.ToString("F0") calories burned</small>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card border-0 shadow-sm h-100 bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <h6 class="card-subtitle mb-2 text-white-50 fw-semibold">Total Meals</h6>
                        <h2 class="fw-bold mb-0">@Model.TotalMeals</h2>
                    </div>
                    <i class="bi bi-apple fs-3 opacity-75"></i>
                </div>
                <small class="text-white-50">@Model.TotalCaloriesConsumed.ToString("F0") calories consumed</small>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card border-0 shadow-sm h-100 bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <h6 class="card-subtitle mb-2 text-white-50 fw-semibold">Total Goals</h6>
                        <h2 class="fw-bold mb-0">@Model.TotalGoals</h2>
                    </div>
                    <i class="bi bi-bullseye fs-3 opacity-75"></i>
                </div>
                <small class="text-white-50">@Model.CompletedGoals completed</small>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light border-0">
                <h5 class="fw-bold mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-flex flex-wrap gap-2">
                    <a asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-people me-2"></i>Manage Users
                    </a>
                    <a asp-action="ViewActivities" class="btn btn-success">
                        <i class="bi bi-activity me-2"></i>View All Activities
                    </a>
                    <a asp-action="ViewNutrition" class="btn btn-info">
                        <i class="bi bi-apple me-2"></i>View All Nutrition
                    </a>
                    <a asp-action="ViewGoals" class="btn btn-warning">
                        <i class="bi bi-bullseye me-2"></i>View All Goals
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light border-0">
                <h5 class="fw-bold mb-0">Recent Users</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentUsers.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Age</th>
                                    <th>Gender</th>
                                    <th>Status</th>
                                    <th>Joined</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.RecentUsers)
                                {
                                    <tr>
                                        <td>@user.Name</td>
                                        <td>@user.Email</td>
                                        <td>@(user.Age?.ToString() ?? "N/A")</td>
                                        <td>@(user.Gender ?? "N/A")</td>
                                        <td>
                                            <span class="badge @(user.IsActive ? "bg-success" : "bg-secondary")">
                                                @(user.IsActive ? "Active" : "Inactive")
                                            </span>
                                        </td>
                                        <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <a asp-action="ViewActivities" asp-route-userId="@user.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye me-1"></i>View Data
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted mb-0">No users found.</p>
                }
            </div>
        </div>
    </div>
</div>

