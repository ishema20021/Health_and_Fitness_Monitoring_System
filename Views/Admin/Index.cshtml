@model List<HealthFitness.Controllers.UserViewModel>
@{
    ViewData["Title"] = "Admin Panel";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<h2>User Management</h2>
<hr />

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Age</th>
                    <th>Gender</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@(user.Age?.ToString() ?? "N/A")</td>
                        <td>@(user.Gender ?? "N/A")</td>
                        <td>
                            <span class="badge @(user.Role == "Admin" ? "bg-danger" : "bg-primary")">@user.Role</span>
                        </td>
                        <td>
                            <span class="badge @(user.IsActive ? "bg-success" : "bg-secondary")">
                                @(user.IsActive ? "Active" : "Inactive")
                            </span>
                        </td>
                        <td>@user.CreatedAt.ToString("MM/dd/yyyy")</td>
                        <td>
                            <form asp-action="ToggleUserStatus" asp-route-userId="@user.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm @(user.IsActive ? "btn-warning" : "btn-success")">
                                    @(user.IsActive ? "Deactivate" : "Activate")
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <p>No users found.</p>
    </div>
}

