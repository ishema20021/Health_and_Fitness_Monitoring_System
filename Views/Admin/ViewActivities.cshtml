@model List<HealthFitness.DTOs.ActivityDto>
@{
    ViewData["Title"] = "View Activities";
    var groupedActivities = Model.OrderByDescending(a => a.Date).GroupBy(a => a.Date.Date);
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold mb-1">All Activities</h2>
        <p class="text-muted mb-0">View activities from all users</p>
    </div>
    <div>
        <form method="get" class="d-inline">
            <select name="userId" class="form-select d-inline-block" style="width: auto;" onchange="this.form.submit()">
                <option value="">All Users</option>
                @foreach (var user in ViewBag.Users)
                {
                    <option value="@user.Id" selected="@(ViewBag.UserId == user.Id)">@user.Name</option>
                }
            </select>
        </form>
    </div>
</div>

@if (Model.Any())
{
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <div class="p-2">
                                <h6 class="text-muted small mb-1">Total Activities</h6>
                                <h4 class="fw-bold mb-0 text-primary">@Model.Count</h4>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-2">
                                <h6 class="text-muted small mb-1">Total Duration</h6>
                                <h4 class="fw-bold mb-0 text-info">@Model.Sum(a => a.Duration) min</h4>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-2">
                                <h6 class="text-muted small mb-1">Total Calories</h6>
                                <h4 class="fw-bold mb-0 text-success">@Model.Sum(a => a.CaloriesBurned).ToString("F0")</h4>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-2">
                                <h6 class="text-muted small mb-1">Unique Users</h6>
                                <h4 class="fw-bold mb-0 text-warning">@Model.Select(a => a.UserName).Distinct().Count()</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="timeline">
        @foreach (var group in groupedActivities)
        {
            <div class="mb-4">
                <div class="d-flex align-items-center mb-3">
                    <div class="flex-grow-1">
                        <h5 class="fw-bold mb-0">
                            <i class="bi bi-calendar3 me-2 text-primary"></i>
                            @group.Key.ToString("MMMM dd, yyyy")
                        </h5>
                        <small class="text-muted">
                            @group.Count() @(group.Count() == 1 ? "activity" : "activities") â€¢ 
                            @group.Sum(a => a.CaloriesBurned).ToString("F0") calories burned
                        </small>
                    </div>
                </div>
                
                <div class="row g-3">
                    @foreach (var activity in group.OrderByDescending(a => a.Date))
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <h6 class="fw-bold mb-1">
                                                <i class="bi bi-activity me-2 text-primary"></i>@activity.ActivityType
                                            </h6>
                                            <small class="text-muted">
                                                <i class="bi bi-person me-1"></i>@activity.UserName
                                            </small>
                                        </div>
                                        <span class="badge bg-primary">@activity.CaloriesBurned.ToString("F0") cal</span>
                                    </div>
                                    
                                    <div class="row g-2 mt-2 small">
                                        <div class="col-6">
                                            <div class="text-muted">Duration</div>
                                            <div class="fw-semibold">@activity.Duration min</div>
                                        </div>
                                        <div class="col-6">
                                            <div class="text-muted">Time</div>
                                            <div class="fw-semibold">@activity.Date.ToString("h:mm tt")</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card border-0 shadow-sm">
        <div class="card-body text-center py-5">
            <i class="bi bi-activity text-muted" style="font-size: 4rem;"></i>
            <h5 class="mt-3 mb-2">No Activities Found</h5>
            <p class="text-muted mb-0">No activities have been logged yet.</p>
        </div>
    </div>
}

