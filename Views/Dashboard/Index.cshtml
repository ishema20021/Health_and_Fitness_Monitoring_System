@model HealthFitness.DTOs.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h3 class="fw-bold mb-0">Dashboard</h3>
    </div>
</div>

<div class="row g-3 mb-3">
    <div class="col-md-6 col-lg-3">
        <div class="card border-0 shadow-sm h-100 bg-primary text-white">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <small class="text-white-50 d-block mb-1">Calories Burned</small>
                        <h4 class="fw-bold mb-0">@Model.TotalCaloriesBurned.ToString("F0")</h4>
                    </div>
                    <i class="bi bi-fire fs-4 opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #28a745 0%, #198754 100%); color: white;">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <small class="text-white-50 d-block mb-1">Calories Consumed</small>
                        <h4 class="fw-bold mb-0">@Model.TotalCaloriesConsumed.ToString("F0")</h4>
                    </div>
                    <i class="bi bi-apple fs-4 opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card border-0 shadow-sm h-100 bg-info text-white">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <small class="text-white-50 d-block mb-1">Activities</small>
                        <h4 class="fw-bold mb-0">@Model.ActivityCount</h4>
                    </div>
                    <i class="bi bi-activity fs-4 opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card border-0 shadow-sm h-100 @((Model.TotalCaloriesConsumed - Model.TotalCaloriesBurned) >= 0 ? "bg-warning" : "bg-danger") text-white">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <small class="text-white-50 d-block mb-1">Net Calories</small>
                        <h4 class="fw-bold mb-0">@((Model.TotalCaloriesConsumed - Model.TotalCaloriesBurned).ToString("F0"))</h4>
                    </div>
                    <i class="bi bi-graph-up-arrow fs-4 opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mb-3">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h5 class="fw-bold mb-0">Your Goals</h5>
            <a asp-controller="Goal" asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
        </div>
        @if (Model.Goals.Any())
        {
            <div class="row g-2">
                @foreach (var goal in Model.Goals.Take(4))
                {
                    var statusClass = goal.Status switch
                    {
                        "Completed" => "success",
                        "Failed" => "danger",
                        _ => "info"
                    };
                    
                    <div class="col-md-6">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body p-3">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h6 class="card-title fw-bold mb-0">@goal.GoalType</h6>
                                    <span class="badge bg-@statusClass">@goal.Status</span>
                                </div>
                                <div class="mb-2">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span class="text-muted" style="font-size: 0.75rem;">Progress</span>
                                        <span class="fw-semibold" style="font-size: 0.75rem;">@goal.ProgressPercentage.ToString("F1")%</span>
                                    </div>
                                    <div class="progress" style="height: 6px;">
                                        <div class="progress-bar bg-@statusClass" role="progressbar" 
                                             style="width: @(Math.Min(goal.ProgressPercentage, 100))%" 
                                             aria-valuenow="@goal.ProgressPercentage" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                        </div>
                                    </div>
                                </div>
                                <div class="row g-2" style="font-size: 0.8rem;">
                                    <div class="col-6">
                                        <span class="text-muted">Target:</span>
                                        <strong class="d-block">@goal.TargetValue</strong>
                                    </div>
                                    <div class="col-6">
                                        <span class="text-muted">Current:</span>
                                        <strong class="d-block">@goal.CurrentValue</strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center py-4">
                    <i class="bi bi-bullseye text-muted" style="font-size: 2rem;"></i>
                    <p class="text-muted mt-2 mb-2 small">No goals created yet.</p>
                    <a asp-controller="Goal" asp-action="Create" class="btn btn-primary btn-sm">Create Goal</a>
                </div>
            </div>
        }
    </div>
</div>


