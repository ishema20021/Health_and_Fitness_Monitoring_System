@model HealthFitness.DTOs.GoalDto
@{
    ViewData["Title"] = "Create Goal";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="fw-bold mb-0">Create New Goal</h4>
</div>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-3">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
                    
                    <div class="mb-2">
                        <label asp-for="GoalType" class="form-label small fw-semibold"></label>
                        <input asp-for="GoalType" class="form-control form-control-sm" placeholder="e.g., Weight Loss, Muscle Gain" />
                        <span asp-validation-for="GoalType" class="text-danger small"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <label asp-for="TargetValue" class="form-label small fw-semibold"></label>
                            <input asp-for="TargetValue" class="form-control form-control-sm" type="number" step="0.01" />
                            <span asp-validation-for="TargetValue" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6 mb-2">
                            <label asp-for="CurrentValue" class="form-label small fw-semibold"></label>
                            <input asp-for="CurrentValue" class="form-control form-control-sm" type="number" step="0.01" value="0" />
                            <span asp-validation-for="CurrentValue" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="mb-2">
                        <label asp-for="Deadline" class="form-label small fw-semibold">
                            <i class="bi bi-calendar3 me-1 text-success"></i>Deadline
                        </label>
                        <div class="date-input-wrapper">
                            <input asp-for="Deadline" class="form-control form-control-sm" type="date" value="@DateTime.Today.AddMonths(1).ToString("yyyy-MM-dd")" />
                        </div>
                        <span asp-validation-for="Deadline" class="text-danger small"></span>
                    </div>
                    
                    <div class="d-flex gap-2 mt-3">
                        <button type="submit" class="btn btn-primary btn-sm">Create Goal</button>
                        <a asp-action="Index" class="btn btn-secondary btn-sm">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

