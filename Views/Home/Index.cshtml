@{
    ViewData["Title"] = "Home Page";
}

<style>
    .home-background {
        background: 
            linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(255, 255, 255, 0.95) 100%),
            linear-gradient(135deg, rgba(40, 167, 69, 0.1) 0%, rgba(25, 135, 84, 0.1) 100%),
            radial-gradient(circle at 20% 50%, rgba(40, 167, 69, 0.15) 0%, transparent 50%),
            radial-gradient(circle at 80% 80%, rgba(25, 135, 84, 0.15) 0%, transparent 50%),
            url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><defs><pattern id="dots" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="1.5" fill="rgba(40,167,69,0.1)"/></pattern></defs><rect width="100" height="100" fill="url(%23dots)"/></svg>');
        background-size: cover, cover, cover, cover, 40px 40px;
        background-position: center, center, center, center, center;
        background-attachment: fixed;
        padding: 3rem 0;
        position: relative;
    }
</style>

<!-- Hero Section -->
<div class="home-background">
    <div class="container py-3 mb-3">
    <div class="row justify-content-center">
        <div class="col-lg-10 text-center">
            <div class="mb-4">
                <div class="d-inline-block p-4 rounded-circle bg-light">
                    <i class="bi bi-heart-pulse-fill text-success" style="font-size: 3.5rem;"></i>
                </div>
            </div>
            <h1 class="display-4 fw-bold mb-4 text-dark">
                Your Health, Your Journey, Your Success
            </h1>
            <p class="lead text-muted mb-5" style="font-size: 1.25rem;">
                Track your fitness activities, monitor your nutrition, and achieve your wellness goals with our comprehensive health management platform.
            </p>
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-success btn-lg px-5">
                    <i class="bi bi-speedometer2 me-2"></i>Go to Dashboard
                </a>
            }
            else
            {
                <a asp-controller="Account" asp-action="Register" class="btn btn-success btn-lg px-5">
                    <i class="bi bi-person-plus me-2"></i>Get Started Free
                </a>
            }
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="home-background">
    <div class="container mb-3">
        <div class="row text-center mb-4">
        <div class="col-12">
            <h2 class="fw-bold mb-3 display-5">Why Choose HealthFitness?</h2>
            <p class="text-muted fs-5">Everything you need to stay on track with your health and fitness journey</p>
        </div>
    </div>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="feature-card card h-100 border-0 shadow-lg">
                <div class="card-body text-center p-5">
                    <div class="feature-icon-wrapper mb-4">
                        <i class="bi bi-activity feature-icon"></i>
                    </div>
                    <h5 class="card-title fw-bold mb-3 fs-4">Activity Tracking</h5>
                    <p class="card-text text-muted">Log your daily workouts, track calories burned, and monitor your exercise patterns. Stay motivated by seeing your progress over time.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card card h-100 border-0 shadow-lg">
                <div class="card-body text-center p-5">
                    <div class="feature-icon-wrapper mb-4">
                        <i class="bi bi-apple feature-icon"></i>
                    </div>
                    <h5 class="card-title fw-bold mb-3 fs-4">Nutrition Monitoring</h5>
                    <p class="card-text text-muted">Track your meals, monitor calorie intake, and maintain a balanced diet. Make informed decisions about your nutrition.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature-card card h-100 border-0 shadow-lg">
                <div class="card-body text-center p-5">
                    <div class="feature-icon-wrapper mb-4">
                        <i class="bi bi-bullseye feature-icon"></i>
                    </div>
                    <h5 class="card-title fw-bold mb-3 fs-4">Goal Setting</h5>
                    <p class="card-text text-muted">Set personalized fitness goals, track your progress, and celebrate your achievements. Stay focused on what matters most.</p>
                </div>
            </div>
        </div>
        </div>
    </div>
</div>

<!-- Benefits Section -->
<div class="home-background">
    <div class="benefits-section py-3 mb-3">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <h2 class="fw-bold mb-4 display-5">Take Control of Your Health</h2>
                <ul class="list-unstyled benefits-list">
                    <li class="mb-4 d-flex align-items-start">
                        <div class="benefit-icon-wrapper me-3">
                            <i class="bi bi-check-circle-fill"></i>
                        </div>
                        <div>
                            <strong class="d-block mb-1 fs-5">Comprehensive Tracking</strong>
                            <span class="text-muted">Monitor all aspects of your health in one place</span>
                        </div>
                    </li>
                    <li class="mb-4 d-flex align-items-start">
                        <div class="benefit-icon-wrapper me-3">
                            <i class="bi bi-check-circle-fill"></i>
                        </div>
                        <div>
                            <strong class="d-block mb-1 fs-5">Data-Driven Insights</strong>
                            <span class="text-muted">Make informed decisions based on your activity and nutrition data</span>
                        </div>
                    </li>
                    <li class="mb-4 d-flex align-items-start">
                        <div class="benefit-icon-wrapper me-3">
                            <i class="bi bi-check-circle-fill"></i>
                        </div>
                        <div>
                            <strong class="d-block mb-1 fs-5">Goal Achievement</strong>
                            <span class="text-muted">Set and track progress toward your fitness objectives</span>
                        </div>
                    </li>
                    <li class="mb-4 d-flex align-items-start">
                        <div class="benefit-icon-wrapper me-3">
                            <i class="bi bi-check-circle-fill"></i>
                        </div>
                        <div>
                            <strong class="d-block mb-1 fs-5">Easy to Use</strong>
                            <span class="text-muted">Intuitive interface designed for users of all fitness levels</span>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="col-lg-6 text-center">
                <div class="benefits-visual p-4">
                    <div class="stats-circle">
                        <i class="bi bi-heart-pulse-fill"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Get Started Section -->
@if (User.Identity?.IsAuthenticated != true)
{
    <div class="home-background">
        <div class="container mb-3">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm bg-light">
                    <div class="card-body text-center p-5">
                        <h3 class="fw-bold mb-3">Start Your Fitness Journey Today</h3>
                        <p class="text-muted mb-4">Join our community and take the first step towards a healthier lifestyle. It's free and takes less than a minute.</p>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-success btn-lg px-5">
                            <i class="bi bi-person-plus me-2"></i>Create Free Account
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
</div>
